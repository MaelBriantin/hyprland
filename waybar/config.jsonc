    "custom/menu":{
        "format": "ÔÄì ",
        "tooltip": false
    },

   "group/expand": {
     "orientation": "horizontal",
     "on-click": "toggle",
     "drawer": {
         "transition-duration": 600,
         "children-class": "not-power",
        "transition-to-left": true,
        "click-to-reveal": true
     },
     "modules": ["custom/menu","custom/spacer","tray","custom/blank-spacer", "custom/blank-spacer", "custom/power"],
   },

    // Modules configuration
    "hyprland/workspaces": {
