    "modules-left": [
        "clock",
        "mpris",
        // "network",
        "sway/mode",
        "sway/scratchpad",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/workspaces" // Removed trailing comma
    ],
    "modules-right": [
        "mpd",
        "pulseaudio",
        "pulseaudio#mic", // Add the new mic module here
        "backlight",
        "keyboard-state",
        "sway/language",
        "battery",
        "power-profiles-daemon",
        "group/expand"
    ],

    "custom/blank-spacer":{
        "format": " " // Removed trailing comma
    },

    "custom/spacer":{
        "format": " | "
    },

    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "<span color='grey'>{status_icon} {dynamic}</span>",
        "max-length": 50,
        "max-width": 50,
        "player-icons": {
            "default": "‚è∏",
            "mpv": "üéµ"
